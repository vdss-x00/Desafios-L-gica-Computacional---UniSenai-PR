programa {
  funcao inicio() {
    real nota1, nota2, media

    escreva("Digite a primeira nota:")
    leia(nota1)

    escreva("Digite a segunda nota:")
    leia(nota2)

    media = (nota1 + nota2)/ 2

    se(media < 7.0){
      limpa()
      escreva("Se esse aluno tirou ", nota1, " e ", nota2, "\n")
      escreva("Significa que este aluno tirou ", media, " na sua matéria!\n")
      escreva("Está reprovado!")
    }
    senao{
      limpa()
      escreva("Se esse aluno tirou ", nota1, " e ", nota2, "\n" )
      escreva("Significa que este aluno tirou ", media, " na sua matéria!\n")
      escreva("Está aprovado!")
    }
  }
}
